<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageAisle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grabz_background"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:focusable="true"
			android:focusableInTouchMode="true"
            android:text="Start managing aisles"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/idEditTextAddAisle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_horizontal"
            android:gravity="left|center_horizontal"
            android:hint="@string/hint_enter_outlet_id"
            android:singleLine="true"
            android:textSize="22sp" />

        <Button
            android:id="@+id/addAisle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Enter Aisle Name.."
            android:onClick="addAisle"
            android:text="Add Aisle" />
    </LinearLayout>

    <TextView
        android:id="@+id/manageAislesHeader"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#336699"
        android:gravity="center_vertical"
        android:padding="10dp" />

    <ListView
        android:id="@+id/idListViewManageAisles"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>