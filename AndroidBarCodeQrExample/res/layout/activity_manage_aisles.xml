<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageAisle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_frame"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:background="#B3990000">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <EditText
	            android:id="@+id/idEditTextAddAisle"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|center_horizontal"
	            android:gravity="left|center_horizontal"
	            android:hint="@string/hint_enter_outlet_id"
	            android:singleLine="true" />
	
	        <Button
	            android:id="@+id/addAisle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:hint="Enter Aisle Name.."
	            android:onClick="addAisle"
	            android:text="Add Aisle" />
	    </LinearLayout>
	</LinearLayout>
	<View android:layout_height="10dp"
	    android:layout_width="fill_parent"
	    android:background="#336699"/>


	<ListView
        android:id="@+id/idListViewManageAisles"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>